@{
    var passports = ViewData["Passports"] as IEnumerable<PassportsApp.Models.Passport>;
    var countries = ViewData["Countries"] as IEnumerable<PassportsApp.Models.Country>;
    var types = ViewData["PassportTypes"] as IEnumerable<PassportsApp.Models.PassportType>;
    var sexes = ViewData["Sexes"] as IEnumerable<PassportsApp.Models.Sex>;
    var holders = ViewData["Holders"] as IEnumerable<PassportsApp.Models.PassportHolder>;
}





<style>
    /* Set the background color and font for the entire page */
    body {
        background-color: #e8f4ff; /* Background color */
        font-family: 'Roboto', sans-serif; /* Font style */
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Ensure content is centered vertically */
        flex-direction: column;
    }

    /* Add some padding and spacing between elements */
    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    h2 {
        text-align: center;
        margin-top: 20px;
        font-size: 1.5rem;
        color: #333;
    }

    /* Styling for tables */
    table {
        width: 80%;
        margin: 20px 0;
        border-collapse: collapse; /* Remove extra space between table borders */
        background-color: white; /* Table background color */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add a subtle shadow around the table */
        border-radius: 8px; /* Optional: Add rounded corners to the table */
    }

    /* Styling for table headers */
    th, td {
        padding: 12px 16px;
        border: 1px solid #ddd; /* Light border around cells */
        text-align: left;
    }

    th {
        background-color: #f2f2f2; /* Header background color */
        font-weight: bold; /* Bold text for headers */
    }

    /* Zebra striping for rows (even and odd rows with different colors) */
    tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    tr:nth-child(even) {
        background-color: #eaf2ff;
    }

    /* Row hover effect */
    tr:hover {
        background-color: #d4e6f1; /* Highlight row on hover */
    }

    /* Styling for empty state messages */
    p {
        text-align: center;
        color: #888;
    }
</style>

<h1>Search Results</h1>

<div class="container">
<!-- Passports -->
<h2>Passports</h2>
@if (passports != null && passports.Any())
{
    <table>
        <thead>
            <tr>
                <th>Passport ID</th>
                <th>Type</th>
                <th>Authority ID</th>
                <th>Issue Date</th>
                <th>Expiration Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in passports)
            {
                <tr>
                    <td>@p.PassportId</td>
                    <td>@p.Type</td>
                    <td>@p.AuthorityId</td>
                    <td>@p.IssueDate</td>
                    <td>@p.ExpirationDate</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found in Passports.</p>
}

<!-- Countries -->
<h2>Countries</h2>
@if (countries != null && countries.Any())
{
    <table>
        <thead>
            <tr>
                <th>Country Code</th>
                <th>Country Name</th>
            </tr>

        </thead>
        <tbody>
        @foreach (var c in countries)
        {
            <tr>
                   <td>@c.CountryCode</td>
                   <td>@c.CountryName</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No results found in Countries.</p>
}


<!-- Passport Types -->
<h2>Passport Types</h2>
@if (types != null && types.Any())
{
    <table>
        <thead>
            <tr>
                <th>Passport Type Abbreviation</th>
                <th>Passport Type Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var type in types)
            {
                <tr>
                    <td>@type.PassportTypeAbr</td>
                    <td>@type.PassportTypeDesc</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found in Passport Types.</p>
}

<!-- Authorities -->
<h2>Authorities</h2>
@{
    var authorities = ViewData["Authorities"] as IEnumerable<PassportsApp.Models.Authority>;
}
@if (authorities != null && authorities.Any())
{
    <table>
        <thead>
            <tr>
                <th>Authority ID</th>
                <th>City</th>
                <th>Street</th>
                <th>House Number</th>
                <th>Phone</th>
                <th>Establishment Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in authorities)
            {
                <tr>
                    <td>@a.AutorityId</td>
                    <td>@a.City</td>
                    <td>@a.Street</td>
                    <td>@a.HouseNum</td>
                    <td>@a.Phone</td>
                    <td>@a.EstablishmentDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found in Authorities.</p>
}

<!-- Passport Holder -->

<h2>Passport Holder</h2>
@if (types != null && types.Any())
{
    <table>
        <thead>
            <tr> 
                <th>Holder Id</th>
                <th>Passport Id</th>
                <th>Holder Name</th>
                <th>Holder Surname</th>
                <th>Patronymic/Matronymic</th>
                <th>Birthday</th>
                <th>Sex</th>
                <th>BirthPLace</th>
                <th>Citizenship</th>
                <th>Signature</th>
                <th>HolderPhoto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var h in holders)
            {
                <tr>
                    <td>@h.HolderId</td>
                    <td>@h.PassportId</td>
                    <td>@h.HolderName</td>
                    <td>@h.HolderSurname</td>
                    <td>@h.PatronymicMatronymic</td>
                    <td>@h.Birthday.ToShortDateString()</td>
                    <td>@h.Sex</td>
                    <td>@h.BirthPlace</td>
                    <td>@h.Citizenship</td>
                    <td>@h.Signature</td>
                    <td>@h.HolderPhoto</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found in Passport Holders.</p>
}
                
<!-- Passport Holder -->

<h2>Sex</h2>
@if (sexes != null && sexes.Any())
{
    <table>
        <thead>
            <tr>
                <th>Sex</th>
                <th>Full Sex</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var s in sexes)
            {
                <tr>
                <td>@s.SexAbr</td>
                <td>@s.FullSex</td>
               </tr>
            }

        </tbody>
    </table>
}
else
{
    <p>No results found in Sex.</p>
}

</div>